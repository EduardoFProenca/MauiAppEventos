<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.EventoCadastrado"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#23507a">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand"
                             Padding="10"
                             Spacing="15">

            <Label Text="Evento Cadastrado"
                   TextColor="#cac7bb"
                   FontFamily="Kalam"
                   FontSize="40"
                   HorizontalTextAlignment="Center"/>

            <!-- Nome do Evento -->
            <Frame Margin="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Nome do Evento"
                           FontAttributes="Bold"
                           TextColor="#cac7bb"
                           FontSize="18"/>
                    <Label Text="{Binding Nome}"
                           FontSize="24"
                           FontFamily="Kalam"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Participantes e Local -->
            <Frame Margin="10" Padding="15">
                <Grid ColumnDefinitions="*, *"
                      RowDefinitions="Auto, Auto, Auto, Auto"
                      RowSpacing="10">

                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Participantes:" 
                           FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding NumeroParticipantes}"
                           TextColor="#cac7bb" 
                           FontSize="18"/>

                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="Local:" 
                           FontAttributes="Bold"/>
                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="{Binding Local}"
                           TextColor="#cac7bb" 
                           FontSize="16"
                           HorizontalTextAlignment="Center"/>

                    <Label Grid.Row="3" Grid.Column="0"
                           Text="Custo por Participante:" 
                           FontAttributes="Bold"/>
                    <Label Grid.Row="3" Grid.Column="1"
                           Text="{Binding CustoPorParticipante, StringFormat='{}{0:C}'}"
                           TextColor="#cac7bb" 
                           FontSize="16"/>
                </Grid>
            </Frame>
            <!-- Datas e Duração -->

            <Frame Margin="10" Padding="15">
                <Grid ColumnDefinitions="*, *, *"
                      RowDefinitions="Auto, Auto, Auto"
                      RowSpacing="10">

                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Data de Início:" 
                           FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1" 
                           Text="Data de Término:" 
                           FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="2" 
                           Text="Duração:" 
                           FontAttributes="Bold"/>

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="{Binding DataInicio, StringFormat='{}{0:dd/MM/yyyy}'}"
                           TextColor="#cac7bb" 
                           FontSize="16"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding DataTermino, StringFormat='{}{0:dd/MM/yyyy}'}"
                           TextColor="#cac7bb" 
                           FontSize="16"/>

                    <Label Grid.Row="1" Grid.Column="2"
                           Text="{Binding Duracao, StringFormat='{}{0} dias'}"
                           TextColor="#cac7bb" 
                           FontSize="16"/>
                </Grid>
            </Frame>

            <!-- Custo Total -->
            <Frame Margin="10" Padding="20" 
                   BackgroundColor="#cac7bb">
                <VerticalStackLayout>
                    <Label Text="CUSTO TOTAL DO EVENTO"
                           TextColor="Black"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           FontSize="16"/>
                    <Label Text="{Binding CustoTotal, StringFormat='{}{0:C}'}"
                           TextColor="Black"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Botão para novo cadastro -->
            <Button Text="Cadastrar Novo Evento"
                    Clicked="Button_Clicked"
                    BackgroundColor="#cac7bb"
                    TextColor="#23507a"
                    Margin="10,20,10,10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>